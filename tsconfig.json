{
  "compilerOptions": {
    "target": "ESnext",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noResolve": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
